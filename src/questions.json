[
    {
        "query": "What is the name of your project",
        "type": "input",
        "handle": "projectname"
    },
    {
        "query": "Add a description (optional)",
        "type": "input",
        "handle": "projectdesc"
    },
    {
        "query": "What kind of project is this ? ",
        "type": "interactive",
        "handle": "type",
        "menu": ["Addon", "NAPI", "CLI", "Package", "Service"]
    },
    {
        "query": "Which coverage package do you want to install?",
        "type": "interactive",
        "handle": "covpackage",
        "menu": ["nyc", "c8"]
    },
    {
        "query": "In which version do you want to start : 1.0.0 or 0.1.0 ",
        "type": "interactive",
        "handle": "version",
        "menu": ["1.0.0", "0.1.0"]
    },
    {
        "query": "Do you want a .env file ?",
        "type": "confirm",
        "handle": "env"
    },
    {
        "query": "Do you want to insert husky hooks ?",
        "type": "confirm",
        "handle": "husky"
    },
    {
        "query": "Is this project is a binary project ?",
        "type": "confirm",
        "handle": "binary"
    }
]
